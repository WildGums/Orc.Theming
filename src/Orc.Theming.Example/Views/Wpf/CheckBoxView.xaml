<catel:UserControl x:Class="Orc.Theming.Example.Views.CheckBoxView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com">

    <StackPanel Orientation="Vertical">
        <CheckBox Content="Unchecked state" IsChecked="False" />
        <CheckBox Content="Unchecked &amp; disabled state" IsEnabled="False" IsChecked="False" />
        <CheckBox Content="Three state" IsChecked="{x:Null}" IsThreeState="True"/>
        <CheckBox Content="Checked state" IsChecked="True" />
        <CheckBox Content="Checked &amp; disabled state" IsEnabled="False" IsChecked="True" />
    </StackPanel>

</catel:UserControl>

<catel:UserControl x:Class="Orc.Theming.Views.FontSizeSwitcherView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com">

    <StackPanel Orientation="Horizontal">
        <Label VerticalAlignment="Center" 
               Content="{catel:LanguageBinding FontSizeSwitcherView_SelectFontSize}" />
        <ComboBox ItemsSource="{Binding FontSizes}" 
                  SelectedItem="{Binding SelectedFontSize}"/>
    </StackPanel>

</catel:UserControl>
